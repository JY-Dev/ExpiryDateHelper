<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/food_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/food"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:contentDescription="음식이미지" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/added_food_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:text="추가한 식재료"/>

            <TextView
                android:id="@+id/register_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:text="등록 일시"/>

            <TextView
                android:id="@+id/enpiry_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="유통 기한"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/keep_way_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/temperature"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/keep_way_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="냉장"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>




    </LinearLayout>


</LinearLayout>